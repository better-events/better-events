{
	"name": "@koroflow/core-js",
	"version": "0.0.1-beta.8",
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"build": "tsup",
		"build:declarations": "tsc -p tsconfig.declarations.json",
